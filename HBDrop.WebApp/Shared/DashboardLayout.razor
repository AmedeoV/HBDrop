@using Microsoft.AspNetCore.Components.Authorization
@inherits LayoutComponentBase
@inject NavigationManager NavigationManager

<PageTitle>HBDrop - Birthday Wishes Automation</PageTitle>

<style>
    .mobile-menu-overlay { 
        display: none; 
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.5);
        z-index: 1040;
        opacity: 0;
        visibility: hidden;
        transition: opacity 0.3s ease;
        pointer-events: none;
    }
    .mobile-menu { 
        display: none;
        position: fixed;
        top: 0;
        right: 0;
        width: 280px;
        max-width: 85vw;
        height: 100vh;
        background: white;
        z-index: 1050;
        transform: translateX(100%);
        transition: transform 0.3s ease;
        box-shadow: -2px 0 8px rgba(0, 0, 0, 0.1);
        overflow-y: auto;
        flex-direction: column;
    }
    @@media (max-width: 767.98px) {
        .mobile-menu-overlay { display: block; }
        .mobile-menu { display: flex; }
    }
    .mobile-menu-overlay.show {
        opacity: 1;
        visibility: visible;
        pointer-events: auto;
    }
    .mobile-menu.show {
        transform: translateX(0);
    }
    .mobile-menu-header {
        padding: 1.25rem;
        border-bottom: 1px solid #e2e8f0;
        display: flex;
        justify-content: space-between;
        align-items: center;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        flex-shrink: 0;
    }
    .mobile-menu-header h5 {
        color: white;
        margin: 0;
    }
    .mobile-menu-close {
        background: none;
        border: none;
        font-size: 1.75rem;
        line-height: 1;
        color: white;
        cursor: pointer;
        padding: 0;
        width: 32px;
        height: 32px;
        display: flex;
        align-items: center;
        justify-content: center;
    }
    .mobile-menu-body {
        padding: 1rem 0;
        overflow-y: auto;
        flex: 1;
    }
    .mobile-menu-link {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        padding: 0.875rem 1.25rem;
        color: #2d3748;
        text-decoration: none;
        font-weight: 500;
        transition: background-color 0.2s, color 0.2s;
        border: none;
        cursor: pointer;
        background: none;
        width: 100%;
        text-align: left;
    }
    .mobile-menu-link:hover {
        background: #f7fafc;
        color: #667eea;
    }
    .mobile-menu-icon {
        font-size: 1.25rem;
        width: 24px;
        display: inline-flex;
        justify-content: center;
    }
</style>

