    private void OnRegionalEventChanged(CustomEventModel customEvent)
    {
        // Auto-set EventName from the selected regional event
        if (!string.IsNullOrEmpty(customEvent.RegionalEventType))
        {
            customEvent.EventName = customEvent.RegionalEventType;
        }

        // Reset country when event type changes
        customEvent.RegionalEventCountryCode = null;
        
        // Try to auto-select country based on timezone if available
        if (!string.IsNullOrEmpty(customEvent.RegionalEventType) && regionalEventsService != null)
        {
            var countryCode = regionalEventsService.GetCountryCodeFromTimezone(contactModel.TimeZoneId ?? userDefaultTimezone);
            if (!string.IsNullOrEmpty(countryCode))
            {
                var countries = regionalEventsService.GetCountriesForEvent(customEvent.RegionalEventType);
                if (countries.Any(c => c.CountryCode == countryCode))
                {
                    customEvent.RegionalEventCountryCode = countryCode;
                }
            }
        }
    }

    private void OnRegionalCountryChanged(CustomEventModel customEvent)
    {
        // Calculate and populate the date when country is selected
        if (!string.IsNullOrEmpty(customEvent.RegionalEventType) && 
            !string.IsNullOrEmpty(customEvent.RegionalEventCountryCode) &&
            regionalEventsService != null)
        {
            var nextDate = regionalEventsService.CalculateEventDate(
                customEvent.RegionalEventType, 
                customEvent.RegionalEventCountryCode, 
                DateTime.Now.Year);
                
            if (nextDate.HasValue)
            {
                // If the date has already passed this year, calculate for next year
                if (nextDate.Value < DateTime.Now)
                {
                    nextDate = regionalEventsService.CalculateEventDate(
                        customEvent.RegionalEventType, 
                        customEvent.RegionalEventCountryCode, 
                        DateTime.Now.Year + 1);
                }
                
                if (nextDate.HasValue)
                {
                    customEvent.EventMonth = nextDate.Value.Month;
                    customEvent.EventDay = nextDate.Value.Day;
                    customEvent.EventYear = null; // Leave year null for recurring events
                }
            }
        }
    }

